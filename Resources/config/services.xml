<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cn_pending_actions.pending_actions_service" class="ClaviculaNox\PendingActionsBundle\Classes\Services\PendingActionsService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="cn_pending_actions.pending_actions.service_handler" />
            <argument type="service" id="cn_pending_actions.pending_actions.event_handler" />
            <argument type="service" id="cn_pending_actions.pending_actions.command_handler" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="cn_pending_actions.pending_actions.service_handler" class="ClaviculaNox\PendingActionsBundle\Classes\Services\ServiceHandler\ServiceHandlerService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="cn_pending_actions.pending_actions.event_handler" class="ClaviculaNox\PendingActionsBundle\Classes\Services\EventHandler\EventHandlerService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="cn_pending_actions.pending_actions.command_handler" class="ClaviculaNox\PendingActionsBundle\Classes\Services\CommandHandler\CommandHandlerService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
