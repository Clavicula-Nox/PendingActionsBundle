{
    "name": "clavicula-nox/pendingactions-bundle",
    "type": "symfony-bundle",
    "description": "Symfony PendingActionsBundle. A simple way to delay the execution of heavy tasks.",
    "keywords": ["delay", "actions"],
    "homepage": "https://github.com/Clavicula-Nox/PendingActionsBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrien Lochon",
            "email": "adrien@claviculanox.io"
        }
    ],

    "require": {
        "php":                      ">=5.5.0",
        "symfony/framework-bundle": "~2.7|~3.0",
        "doctrine/doctrine-bundle": "~1.4",
        "doctrine/orm":             "~2.4"
    },

    "require-dev": {
        "symfony/phpunit-bridge": "^2.7 || ^3.0",
        "phpunit/phpunit": "~4.8|~5.0"
    },

    "autoload": {
        "psr-4": {
            "ClaviculaNox\\PendingActionsBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "ClaviculaNox\\PendingActionsBundle\\Tests\\": "tests/"
        }
    }
}
